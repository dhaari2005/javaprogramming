import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int x=sc.nextInt();
        int y=sc.nextInt();
        char z= sc.next().charAt(0);
        switch(z){
            case '+':
                System.out.printf("Addition of two number is %.1f",(float)x+y);
                break;
            case '-':
                System.out.printf("Subtraction of two number is %.1f",(float)x-y);
                break;
            case '*':
                System.out.printf("Multiplication of two number is %.1f",(float)x*y);
                break;
            case '/':
                System.out.printf("Division of two number is %.1f",(float)x/y);
                break;
            case '%':
                System.out.printf("Modulo of two number is %.1f",(float)x%y);
                break;
         default:
                System.out.println("Invalid Input");
            
                
                
        }
    }
}
